<div class="row justify-space-between-md">
  <div class="login-card">
    <h2 class="page-title">{{translation.Login}}</h2>
    <form class="form login-form">
      <div class="form-group">
        <label for="email-login">{{translation.Email}}:</label>
        <input class="form-input" type="text" id="email-login" />
      </div>
      <div class="form-group">
        <label for="password-login">{{translation.Password}}:</label>
        <input class="form-input" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">{{translation.Login}}</button>
      </div>
    </form>
  </div>
  <div class="login-card">
    <h2 class="page-title">{{translation.Signup}}</h2>
    <form class="form signup-form">
      <div class="form-group">
        <label for="username-signup">{{translation.Username}}:</label>
        <input class="form-input" type="text" id="username-signup" />
      </div>
      <div class="form-group">
        <label for="email-signup">{{translation.Email}}:</label>
        <input class="form-input" type="text" id="email-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup">{{translation.Password}}:</label>
        <input class="form-input" type="password" id="password-signup" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">{{translation.Signup}}</button>
      </div>
    </form>
  </div>
</div>

<script src="./public/js/login.js"></script>