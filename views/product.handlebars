<div class="container prodect-section d-flex flex-column">
        <div class="d-flex w-100 justify-content-around mt-5">
            <div class="left d-flex flex-column w-50">
                <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        {{#each product.imgs as |img|}}
                            
                            <div {{#if img.img_path.[0]}}class="carousel-item active"{{else}}class="carousel-item"{{/if}}>
                            
                            <img src="/images/{{img.img_path}}" class="d-block w-100" alt="...">
                            </div>
                        {{/each}}
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
            <div class="right d-flex flex-column w-25">
                <h1 class="mb-5">{{product.product_name}}</h1>
                {{!-- {{#if document.documentElement.lang === "en"}} --}}
                    <h1 class="mb-5">{{product.product_name}}</h1>
                {{!-- {{else}} --}}
                    {{!-- <h1 class="mb-5">{{product.product_name_es}}</h1> --}}
                {{!-- {{/if}} --}}
                <p class="mb-5">{{translation.Price}}:{{product.price}}</p> 
                <h5 class="">{{translation.Quantity}}</h5>
                <input class="number-select mb-5 form-control" type="number" min="0" onchange="checkTextbox(this)" id="quantity" value="0">
                <a href="#" class="addcart-btn btn btn-primary" id="addcartbtn" data-a="{{product.id}}" data-b="{{product.price}}" data-c="{{userID}}">{{translation.AddCart}}</a>
            </div>
        </div>
        <div class="bottom mt-5 px-5">
            <h1>{{translation.Description}}</h1>
            {{!-- {{#if document.documentElement.lang === "en"}} --}}
                <p>{{product.product_desc}}</p>
            {{!-- {{else}} --}}
                {{!-- <p>{{product.product_desc_es}}</p> --}}
            {{!-- {{/if}} --}}
        </div>

        <section class="reviews-section">
            <h2>Reviews</h2>
            {{#each reviews as |review|}}
                {{> review-card}}
            {{/each}}
        </section>
        <form class="reviews-form">
        <h3>Leave Comments Here</h3>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">User Name</label>
            {{!-- <input class="form-control" type="text" placeholder="Disabled input" aria-label="Disabled input example" disabled> --}}
            <input class="form-control" id="username" type="text" placeholder="Username" aria-label="input example">
        </div>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Title</label>
            <input class="form-control" id="review_title" type="text" placeholder="Title" aria-label="input example">
        </div>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Rating</label>
            <select class="form-select" aria-label="Default select example" id="rating">
                <option selected>Select rating start to this product</option>
                <option value="1">One</option>
                <option value="2">Two</option>
                <option value="3">Three</option>
                <option value="4">Four</option>
                <option value="5">Five</option>
            </select>
        </div>
        <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label">Comments</label>
            <textarea class="form-control" id="review_text" rows="3"></textarea>
            </div>
            <div class="d-flex mt-5 btn-frame justify-content-end">
            <button type="cancel" class="btn btn-info"><a href="/{{category_id}}">Back</a></button>
            <button type="submit" class="btn btn-info ms-3 submit" data-product-id="{{product.id}}" data-user-id="{{userID}}">Submit</button>
            </div>
    </form>
</div>
<script src="/js/forCart.js"></script>
